    <style>
        @import url('https://fonts.googleapis.com/css2?family=Titan+One&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Zeyada&display=swap');

        .hero {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

        .hero h1 {
            font-family: 'Titan One', sans-serif;
            font-size: 150px;
        }

        .hero p {
            font-family: 'Zeyada', cursive;
            font-size: 30px;
            letter-spacing: 8px;
            opacity: 0.5;
        }

        .hero a {
            text-decoration: none;
        }

        nav {
            height: 50px;
            width: 35%;
            position: fixed;
            z-index: 1;
            left: 50%;
            top: 4%;
            transform: translate(-50%, -50%);
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            box-shadow: 0 0 5px #ccc;
        }

        nav a {
            text-decoration: none;
        }

        .main-form {
            width: 500px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 50px;
            /* make it appear in center */
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
